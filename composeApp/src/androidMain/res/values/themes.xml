<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.HabitStreak" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Customize your theme here -->
    </style>

    <!-- Splash Screen Theme -->
    <style name="Theme.HabitStreak.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background color -->
        <item name="windowSplashScreenBackground">@android:color/white</item>

        <!-- Set the splash screen icon (optional) -->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>

        <!-- Set the icon background color (optional) -->
        <item name="windowSplashScreenIconBackgroundColor">@android:color/white</item>

        <!-- Set the theme for the activity after splash -->
        <item name="postSplashScreenTheme">@style/Theme.HabitStreak</item>
    </style>
</resources>
